<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="11dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:minHeight="150dp"
            android:background="@color/color_white"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/stationImageCard"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/stationImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/stationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Cannaught Place station alskcnlaksncascascsacccccccccccc"
                app:layout_constraintEnd_toStartOf="@id/distanceLabel"
                app:layout_constraintStart_toEndOf="@id/stationImageCard"
                app:layout_constraintTop_toTopOf="@id/stationImageCard"
                android:textColor="@color/color_black"
                android:layout_marginHorizontal="5dp"/>
            
            <TextView
                android:id="@+id/stationAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cannaught Place Opp. Max hospitals , New Delhi"
                app:layout_constraintTop_toBottomOf="@id/stationName"
                app:layout_constraintStart_toStartOf="@id/stationName"
                android:textSize="12sp"
                android:textColor="@color/color_black"
                android:alpha=".7"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/stationAvailability"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/distanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bg_label"
                android:text="1.3 km"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/stationName"/>

            <TextView
                android:id="@+id/stationAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="12sp"
                android:textColor="@color/color_black"
                app:layout_constraintBaseline_toBaselineOf="@id/stationAddress"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"/>
            
            <ImageView
                android:id="@+id/ccsIcon"
                android:layout_width="17dp"
                app:layout_constraintDimensionRatio="1:2"
                android:layout_height="0dp"
                android:src="@drawable/ic_ccs_icon"
                app:layout_constraintStart_toStartOf="@id/ccsText"
                app:layout_constraintEnd_toEndOf="@id/ccsText"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@id/ccsText"
                app:layout_constraintTop_toBottomOf="@id/stationAddress"/>
            <TextView
                android:id="@+id/ccsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/color_black"
                android:text="CCS"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccsIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/chadIcon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_chad_icon"
                app:layout_constraintBottom_toTopOf="@id/chadText"
                app:layout_constraintTop_toTopOf="@id/ccsIcon"
                app:layout_constraintStart_toStartOf="@id/chadText"
                app:layout_constraintEnd_toEndOf="@id/chadText" />
            <TextView
                android:id="@+id/chadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAdeMO"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@id/ccsText"
                app:layout_constraintStart_toEndOf="@id/ccsText"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/StationStar"
                android:src="@drawable/ic_start_selected"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="25sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>