<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="11dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_soft_box"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="150dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/stationImageCard"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/stationImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/stationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/lato"
                android:text="Cannaught Place station"
                android:textColor="@color/color_black"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@id/distanceLabel"
                app:layout_constraintStart_toEndOf="@id/stationImageCard"
                app:layout_constraintTop_toTopOf="@id/stationImageCard" />

            <TextView
                android:id="@+id/stationAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:alpha=".7"
                android:ellipsize="end"
                android:fontFamily="@font/lato"
                android:maxLines="1"
                android:text="Cannaught Place Opp. Max hospitals , New Delhi"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/stationAvailability"
                app:layout_constraintStart_toStartOf="@id/stationName"
                app:layout_constraintTop_toBottomOf="@id/stationName" />

            <TextView
                android:id="@+id/distanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_blue_label"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="1.3 km"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@id/stationName"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/stationAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/lato"
                android:text="Available"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@id/stationAddress"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/ccsIcon"
                android:layout_width="17dp"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_ccs_icon"
                app:layout_constraintBottom_toTopOf="@id/ccsText"
                app:layout_constraintDimensionRatio="1:2"
                app:layout_constraintEnd_toEndOf="@id/ccsText"
                app:layout_constraintStart_toStartOf="@id/ccsText"
                app:layout_constraintTop_toBottomOf="@id/stationAddress"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/ccsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato"
                android:text="CCS"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccsIcon" />

            <ImageView
                android:id="@+id/chadIcon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_chad_icon"
                app:layout_constraintBottom_toTopOf="@id/chadText"
                app:layout_constraintEnd_toEndOf="@id/chadText"
                app:layout_constraintStart_toStartOf="@id/chadText"
                app:layout_constraintTop_toTopOf="@id/ccsIcon" />

            <TextView
                android:id="@+id/chadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/lato"
                android:text="CHAdeMO"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@id/ccsText"
                app:layout_constraintStart_toEndOf="@id/ccsText" />

            <ImageView
                android:id="@+id/StationStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="25sp"
                android:src="@drawable/ic_star_selected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>