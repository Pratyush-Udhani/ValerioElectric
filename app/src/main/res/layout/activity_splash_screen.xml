<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".Splash.SplashScreen">

    <ImageView
        android:id="@+id/imageLogo"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias=".4"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="@dimen/normal_spacing"
        android:gravity="center"
        android:src="@drawable/ic_valerio_logo_individual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/imageLogo"
    android:text="@string/transforming_electric_mobility"
    android:textSize="24sp"
    android:gravity="center"
    android:textColor="@color/color_black"/>


</androidx.constraintlayout.widget.ConstraintLayout>